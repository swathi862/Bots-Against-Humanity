
@{
    ViewData["Title"] = "EndOfGame";
}
    <div class="container">
        <div style="background:url(https://media1.giphy.com/media/3ohhwzIw3bISRhQWME/giphy.gif); height: 70vh;">
            <img src="https://media1.giphy.com/media/3ohhwzIw3bISRhQWME/giphy.gif" alt="confetti" style="height: 10em; opacity: 0.1;">
            <div class="text-center">
                <h1>Congratulations!</h1>
                <h4>You have won @ViewData["gameTotal"] points!</h4><br />
                <div class="col-md-12 text-center align-items-center">
                    <a class="btn btn-outline-primary" asp-controller="AnswerCards" asp-action="LoadGame">Play Again</a>
                    <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">Home</a>
                    <a class="btn btn-outline-success" asp-controller="Decks" asp-action="Index">Visit Store</a>
                </div>
            </div>
        </div>
    </div>

