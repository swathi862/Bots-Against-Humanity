@model IEnumerable<CardGame.Models.AnswerCard>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PointValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Deck)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PointValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Deck.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AnswerCardId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AnswerCardId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AnswerCardId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
