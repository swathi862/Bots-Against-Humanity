@model CardGame.Models.ViewModels.PlayingRoundCards

@{
    ViewData["Title"] = "PlayGame";
}
    <div class="container align-items-center justify-content-center">
        <div class="row justify-content-center">
            <h2 class="card text-center flex-wrap" style="width: 30rem; height: 10rem; padding: 1em;">@Model.roundQuestionCard.Description</h2>
        </div>
        <br/>
        <div class="row justify-content-between">
            <div>
                <h1 class="text-center">Player 1</h1>
                <h2 class="card text-center flex-wrap" style="width: 18rem; height: 15rem; padding: 1em;">@Model.playerOneCard.Description</h2>
            </div>
            <div>
                <h1 class="text-center">Player 2</h1>
                <h2 class="card text-center flex-wrap" style="width: 18rem; height: 15rem; padding: 1em;">@Model.playerTwoCard.Description</h2>
            </div>
            <div>
                <h1 class="text-center">Player 3</h1>
                <h2 class="card text-center flex-wrap" style="width: 18rem; height: 15rem; padding: 1em;">@Model.playerThreeCard.Description</h2>
            </div>
        </div>
    </div>

