@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Home Page";
}

@if (SignInManager.IsSignedIn(User))
{
    <div class="container text-center">
        <h1 class="display-4">Welcome, @User.Identity.Name!</h1>
        <br />
        <br />
        <br />
        <br />
        <div class="justify-content-around" style="display: flex;">
            <a class="btn btn-primary align-items-center" asp-controller="AnswerCards" asp-action="LoadGame" style="width: 14em; height: 12em;">
                <div>
                    <h3>Collect Points!</h3>
                    <img src="https://i.imgur.com/mKpKosO.gif" alt="coins" style="width: 65%;"/>
                </div>
            </a>
            <h2 class="align-items-center">~ OR ~</h2>
            <a class="btn btn-secondary align-items-center" asp-controller="Decks" asp-action="Index" style="width: 14em; height: 12em;">
                <div>
                    <h3>Visit the Store!</h3>
                    <img src="https://media1.tenor.com/images/455d82b6ba7423c156be9cf42ba7dfd9/tenor.gif?itemid=16826559" alt="store" style="width: 68%; border-radius: 1em;" />
                </div>
            </a>
        </div>
    </div>
}
else
{
    <div class="text-center">
        <h1 class="display-4">Welcome</h1>
        <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    </div>
}
